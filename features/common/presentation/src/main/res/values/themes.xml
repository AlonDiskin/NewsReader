<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/merriweather_sans_semi_bold</item>
        <item name="android:fontFamily">@font/merriweather_sans_medium</item>
    </style>
    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/merriweather_sans_extra_bold_italic</item>
        <item name="android:fontFamily">@font/merriweather_sans_extra_bold_italic</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/merriweather_sans_medium</item>
        <item name="android:fontFamily">@font/merriweather_sans_medium</item>
    </style>
    <style name="TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/merriweather_sans_medium</item>
        <item name="android:fontFamily">@font/merriweather_sans_medium</item>
    </style>
    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/merriweather_sans_regular</item>
        <item name="android:fontFamily">@font/merriweather_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>